{
	"compilerOptions": {
		"module": "commonjs",
		"jsx": "react",
		"target": "es5",
		"lib": ["dom", "es6", "es2017", "esnext.asynciterable"],
		"outDir": "dist",
		"experimentalDecorators": true,
		"moduleResolution": "node",
		"noImplicitAny": false,
		"noEmitOnError": false,
		"importHelpers": true,
		"typeRoots": ["./node_modules/@types/"],
		"baseUrl": "./src",
		"isolatedModules": false
	},
	"include": ["./src/**/*.ts", "./src/**/*.tsx"]
}
